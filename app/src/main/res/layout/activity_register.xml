<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="usc.edu.uscwebapp.RegisterActivity">
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#A80002">
        <TextView
            android:id="@+id/tv_registerheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Register For Courses"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_mainbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFcc00"
        android:layout_below="@+id/rl_main">
        <Spinner
            android:id="@+id/sp_courses"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:spinnerMode="dialog"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"/>
        <ImageButton
            android:id="@+id/ib_course_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar"
            android:layout_alignParentRight="true"
            />
        <ImageButton
            android:id="@+id/ib_course_bin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action"
            android:layout_toLeftOf="@+id/ib_course_calendar"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_nav_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:background="#A80002"
        android:gravity="center">
        <Button
            android:id="@+id/bt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tabs_layout"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/bt_clearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tabs_layout"
            android:text="D-Clearance"
            android:textColor="#fff"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            />

        <Button
            android:id="@+id/bt_advisor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tabs_layout"
            android:text="Advisor-Info"
            android:textColor="#fff"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            />

        <Button
            android:id="@+id/bt_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tabs_layout"
            android:text="Profile"
            android:textColor="#fff"
            android:textSize="16sp"
            android:paddingLeft="15dp"/>
    </LinearLayout>

</RelativeLayout>
