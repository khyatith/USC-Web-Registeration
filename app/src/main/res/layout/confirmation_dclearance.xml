<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="usc.edu.uscwebapp.ConfirmDclear">
    <ImageView
        android:id="@+id/iv_logo_dc"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/usclogo"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:text="Your request has been submitted to your department for approval. The department will mail you about further information"
        android:id="@+id/textView3" />
    <Button
        android:id="@+id/bt_becktomain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:background="@drawable/button_signin"
        android:text="Go to main Menu"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/bt_becktonextcourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_becktomain"
        android:background="@drawable/button_signin"
        android:text="Register another course"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />

</LinearLayout>